# ============================================
# AuraFarm Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values
# Next.js automatically loads .env.local files
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Local: mongodb://localhost:27017/aurafarm
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/aurafarm
MONGODB_URI=mongodb://localhost:27017/aurafarm

# ============================================
# ADMIN AUTHENTICATION
# ============================================
# Initial admin credentials (used by init-admin.ts script)
# Change these after first setup!
ADMIN_EMAIL=admin@aurafarm.com
ADMIN_PASSWORD=ChangeThisPassword123!

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT secret for signing tokens
# Generate with: openssl rand -base64 32
# MUST be changed in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT token expiration (e.g., "7d", "24h", "1h")
JWT_EXPIRY=7d

# OTP configuration
# Secret for OTP generation (optional, currently not used but reserved for future)
OTP_SECRET=your-otp-secret-key-change-in-production

# OTP expiration time in minutes (default: 10)
OTP_EXPIRY_MINUTES=10

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# Leave empty to use mock mode (emails logged to console)
# Configure for production email delivery

# SMTP server hostname
# Gmail: smtp.gmail.com
# Outlook: smtp-mail.outlook.com
# Custom: your-smtp-server.com
EMAIL_HOST=

# SMTP server port
# Gmail: 587 (TLS) or 465 (SSL)
# Outlook: 587
EMAIL_PORT=587

# SMTP username (usually your email address)
EMAIL_USER=

# SMTP password (use app-specific password for Gmail)
# Gmail: Generate app password at https://myaccount.google.com/apppasswords
EMAIL_PASS=

# From email address (sender)
# Should match EMAIL_USER or be a verified sender
EMAIL_FROM=noreply@aurafarm.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Application name (used in emails, UI)
APP_NAME=AuraFarm

# Public application URL (used for API calls, email links)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
# Options: development, production, test
NODE_ENV=development

# ============================================
# PAYMENT CONFIGURATION
# ============================================
# UPI Merchant ID (for mock/testing)
# In production, this will be your actual merchant ID
UPI_MERCHANT_ID=mock_merchant_123

# Enable test mode for payments
# Set to false in production when using real payment gateway
UPI_TEST_MODE=true

# ============================================
# RAZORPAY CONFIGURATION (Optional)
# ============================================
# Uncomment and fill when integrating Razorpay
# RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
# RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# ============================================
# CASHFREE CONFIGURATION (Optional)
# ============================================
# Uncomment and fill when integrating Cashfree
# CASHFREE_APP_ID=your_cashfree_app_id
# CASHFREE_SECRET_KEY=your_cashfree_secret_key

# ============================================
# NOTES
# ============================================
# 1. Never commit .env.local to version control
# 2. Use strong, random secrets in production
# 3. For Gmail SMTP, enable "Less secure app access" or use App Passwords
# 4. MongoDB Atlas requires whitelisting your IP address
# 5. In production, use environment variables from your hosting provider
#    (Vercel, Railway, etc.) instead of .env.local
